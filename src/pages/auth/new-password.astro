---
import Layout from "@/layouts/Layout.astro";
import NewPasswordForm from "@/components/auth/NewPasswordForm";
import { createServerSupabase } from "@/lib/supabase";

// Sprawdź czy użytkownik ma ważny token resetu hasła
const supabase = createServerSupabase(Astro.cookies);
const { data: { session } } = await supabase.auth.getSession();

// Jeśli nie ma sesji lub tokena resetu, przekieruj do strony logowania
if (!session?.user) {
  return Astro.redirect("/auth/login");
}
---

<Layout title="Nowe hasło | AI Planner">
  <div class="min-h-screen bg-gray-50">
    <div class="container mx-auto px-4 py-8 h-screen flex items-center justify-center">
      <div class="w-full max-w-md">
        <NewPasswordForm
          client:load
          onSubmit={async (password: string) => {
            const response = await fetch("/api/auth/new-password", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({ password }),
            });
            
            const data = await response.json();
            
            if (data.success) {
              alert(data.message);
              window.location.href = data.redirect;
            } else {
              throw new Error(data.error);
            }
          }}
        />
      </div>
    </div>
  </div>
</Layout> 